---
export interface Props {
	name: string;
    img: string;
}

const { name, img } = Astro.props;
---
<div class="pro flex flex-col items-center justify-center border-[15px] border-whiteColor pt-14 mx-6">
    <h1 class="pro-title uppercase text-textGrey font-bold text-2xl relative">{name}</h1>
    <img src={img} alt="product pic" class="mt-10 relative pro-img">
</div>